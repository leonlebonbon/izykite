<div class="container">
  <h1>Search Anything ⚡️</h1>
  <input type="text" id="search">
  <ul id="results" class="list-inline"></ul>

<h2>Our recommendations</h2>
<div class="row">
  <% @experiences.each do |experience| %>
      <div class="col-xs-12 col-sm-6 col-md-4">
        <%= link_to experience_path(experience) do %>
          <div class="card" id="card-spacing" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path experience.photo, crop: :fill %>');">
            <div class="card-category">Popular</div>
            <div class="card-description">
              <h2><%= experience.name %></h2>
              <p><%= experience.address %></p>
            </div>
            <%= cl_image_tag experience.user.photo, class:'card-user' %>
          </div>
        <% end %>
      </div>
  <% end %>
</div>
</div>

<div class="container">
<div id="home-banner" class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= image_path 'kite_one.jpg' %>')">
  <div class="banner-content text-center">
    <h2>Gagnez jusqu'à 20 000€ par mois en partageant vos expériences en kite !</h2>
    <a class="btn btn-primary btn-lg">Become Kite Master</a>
  </div>
</div>
</div>


