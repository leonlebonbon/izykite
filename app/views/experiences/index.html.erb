<div class="main-container">
  <div class="experiences">
    <div class="search-bar">
      <h1>Discover our experiences! ⚡️</h1>
      <div id="custom-search-input">
        <div class="input-group col-md-12">
          <input type="text" class="form-control input-lg" placeholder="The kite trip I've always dreamt of..." />
          <span class="input-group-btn">
            <button class="btn btn-info btn-lg" type="button">
              <i class="glyphicon glyphicon-search"></i>
            </button>
          </span>
        </div>
      </div>
    </div>
    <div class="row">
      <% @experiences.each do |experience| %>
        <div class="col-xs-12 col-sm-6 col-md-6">
          <%= link_to experience_path(experience) do %>
            <div class="card" id="card-spacing" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path experience.photo, crop: :fill %>');">
              <div class="card-category">Popular</div>
              <div class="card-description">
                <h2><%= experience.name %></h2>
                <p><%= experience.address %></p>
              </div>
              <%= cl_image_tag experience.user.photo, class:'card-user' %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
  <div
    id="map"
    class="map-layout hidden-xs"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
   ></div>
</div>


