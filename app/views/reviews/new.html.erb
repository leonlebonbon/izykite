<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= cl_image_path @experience.photo %>);">
</div>
<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <div class="form-card">
        <h2>How much did you like this experience?</h2>
        <%= simple_form_for([@experience, @review]) do |f| %>
          <%= f.input :rating, placeholder: '5', label: 'rating (out of 5): ' %>
          <%= f.input :content, placeholder: 'The Best Kite experience I ever had!' %>
          <%= f.button :submit, class: 'btn btn-izy' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
