<div class="container">
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3">
      <div class="form-card">
        <h2>Edit your profile</h2>

        <%= simple_form_for @user do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :nickname,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "Kite-ian M'bappe" }%>
            <%= f.input :email,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "email" }%>
            <%= f.input :photo %>
            <%= f.input :photo_cache, as: :hidden %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Edit profile", class: 'btn btn-izy' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
